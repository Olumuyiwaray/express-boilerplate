{
  "name": "express-boilerplate",
  "description": "Simple startup boilerplate with configuration, CI/CD and docker for any express app",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "lint": "npx eslint --fix",
    "dev": "nodemon --watch src --ext ts --exec ts-node ./src/app.ts",
    "build": "rm -rf dist/ && tsc",
    "start": "node dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "\"https://github.com/Olumuyiwaray/express-boilerplate\""
  },
  "keywords": [
    "express",
    "typescript",
    "boilerplate"
  ],
  "author": "Samuel Jimoh",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "install": "^0.13.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "npm": "^10.7.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.12",
    "@types/method-override": "^0.0.35",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
